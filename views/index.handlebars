<h1>Eat-Da-Burger!</h1>

<ul>
	{{#each burger}}
	{{#unless devoured}}
	<li>{{this.id}} {{this.burger_name}}<button id= {{this.id}} class="eaten">Devour?</button></li>
	{{/unless}}
	{{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

	<div class="form-group">
		<label for="ca">Burger Name:</label>
		<input type="text" id="burger" name="burger_name">
	</div>

	<button type="submit">Add Burger</button>
</form>


<ul>
	{{#each burger}}
